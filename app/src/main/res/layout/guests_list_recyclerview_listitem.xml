<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr">

    <LinearLayout
        android:id="@+id/guest_listitem_LAY_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_2sdp">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/guest_listitem_IMG_cover"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"
            app:shapeAppearanceOverlay="@style/circleImageView"
            android:src="@drawable/contact_profile">
        </com.google.android.material.imageview.ShapeableImageView>
    </LinearLayout>

    <TextView
        android:id="@+id/guest_listitem_TXT_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignTop="@id/guest_listitem_LAY_cover"
        android:layout_toRightOf="@id/guest_listitem_LAY_cover"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/listitem_fullname"
        android:textSize="@dimen/_16sdp"
        android:typeface="sans"
        android:text="Name"/>

    <TextView
        android:id="@+id/guest_listitem_TXT_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@id/guest_listitem_TXT_fullname"
        android:layout_alignStart="@id/guest_listitem_TXT_fullname"
        android:textColor="@color/listitem_category"
        android:textSize="@dimen/_12sdp"
        android:typeface="sans"
        android:text="Category"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/guest_listitem_LAY_cover"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_7sdp"
            android:layout_marginRight="@dimen/_2sdp">
            <ImageView
                android:id="@+id/guest_listitem_IMG_check"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:background="@drawable/ic_baseline_check_24"
                android:visibility="invisible">
            </ImageView>
        </LinearLayout>
</RelativeLayout>